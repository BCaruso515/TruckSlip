<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TruckSlip.Views.SignInPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:TruckSlip.ViewModels"
    x:Name="this"
    Title="Sign In"
    x:DataType="vm:SignInViewModel"
    Shell.FlyoutBehavior="Disabled">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            BindingContext="{Binding Path=BindingContext, Source={x:Reference this}, x:DataType=Page}"
            Command="{Binding AppearingCommand}"
            EventName="Appearing" />
    </ContentPage.Behaviors>

    <VerticalStackLayout Padding="10" Spacing="15">
        <Entry
            Keyboard="Email"
            Placeholder="Enter your email"
            Text="{Binding Email}" />
        <Entry
            IsPassword="True"
            Placeholder="Enter your password"
            Text="{Binding Password}" />
        <HorizontalStackLayout Spacing="15">
            <Label Text="Stay signed in" VerticalOptions="Center" />
            <CheckBox IsChecked="{Binding RememberMe}" VerticalOptions="Center" />
        </HorizontalStackLayout>
        <Button Command="{Binding SignInCommand}" Text="Sign In" />
        <HorizontalStackLayout Spacing="15">
            <Label Text="Don't have an account?" VerticalOptions="End" />
            <Button Command="{Binding SignUpPageCommand}" Text="Sign Up" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
